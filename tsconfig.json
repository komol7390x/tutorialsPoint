{
  "compilerOptions": {
    "target": "ES2020",                // Yaxshi async/await va modern API'lar
    "module": "ESNext",                // ESM uchun mos
    "moduleResolution": "Node",
    "esModuleInterop": true,          // CommonJS modullar bilan muvofiqlik
    "forceConsistentCasingInFileNames": true,
    "strict": true,                   // TypeScriptning to‘liq qat’iy rejimi
    "skipLibCheck": true,
    "resolveJsonModule": true,        // .json fayllarni import qilish uchun
    "outDir": "./dist",               // Kompilyatsiya natijasi
    "rootDir": "./src",               // Manba fayllar papkasi
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,            // Xatolik bo‘lsa, .js fayl chiqmasin
    "isolatedModules": true,          // Har bir fayl mustaqil modul
    "lib": ["ES2020", "DOM"]          // Node yoki browser uchun kerakli API'lar
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}